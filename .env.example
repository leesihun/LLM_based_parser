# LLM-based Parser Configuration

# RAG System Settings
RAG_COLLECTION_NAME=cellphone_reviews
EMBEDDING_MODEL=nomic-embed-text:latest
SIMILARITY_THRESHOLD=0.8
RAG_CONTEXT_SIZE=5

# Ollama Settings (Korean-capable models recommended)
DEFAULT_OLLAMA_MODEL=qwen2
# Alternative Korean models: llama3, gemma2, mistral
OLLAMA_HOST=localhost:11434

# Language Settings
DEFAULT_LANGUAGE=auto  # Options: auto, en, ko

# LLM Generation Settings
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS=1000

# Excel File Configuration
POSITIVE_FILENAME=fold_positive.xlsx
NEGATIVE_FILENAME=fold_negative.xlsx

# Data Directory (relative to project root)
# DATA_DIR=data